#include<iostream>
using namespace std;

int main(){
    //write your code here
    
    int n;
    cin>>n;
    int* arr = new int[n];
    for(int i = 0 ; i < n; i++){
        cin>>arr[i];
    }
    
    int min = arr[0];
    int max = arr[0];
    
    for(int i = 1; i < n; i++){
        if(arr[i] > max){
            max = arr[i];
        }
        
        if(arr[i] < min){
            min = arr[i];
        }
    }
    
    int ans = max - min;
    cout<<ans<<endl;
}
